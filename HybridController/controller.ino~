#define CONNECTION_MILLIS 500


/////////////////////////////
//global vars
/////////////////////////////


uint16_t lastConnectionCheck



void setup()
{


}

void loop()
{
	if((millis() - lastConnectionCheck) >= CONNECTION_MILLIS)
	{
		checkConnection();
		lastConnectionCheck = millis();
	}


}

